	<property file="build.properties" />

	<target name="build">
        <delete dir="tmp" includeemptydirs="true" />

        <copy todir="tmp">
			<fileset dir="../../code" />
		</copy>

		<move file="tmp/administrator/components/com_pages/pages.xml" tofile="tmp/pages.xml" overwrite="true" />

